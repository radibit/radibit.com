<style>
  css-doodle {
  --rule: (
    :doodle {
      @grid: 40x1 / 40vmin;
      perspective: 70vmin;
      --play-state: running;
    }

    :doodle(:hover) {
      --play-state: paused;
    }

    background: @multi(@r(40, 20), (
    radial-gradient(
    @p(#ff6153, #ffa199, #1d2536, #354464) 40%,
    transparent 50%
    ) @r(100%) @r(100%) / @r(1%, 3%, .1) @lr() no-repeat
    ));

    @size: 80%;
    @place-cell: center;

    border-radius: 50%;
    transform-style: preserve-3d;
    animation: scale-up 15s linear infinite;
    animation-delay: calc(@i() * -.4s);
    animation-play-state: @var(--play-state);

    @keyframes scale-up {
      0% {
        opacity: 0;
        transform: translate3d(0, 0, 0) rotate(0);
      }
      10% {
        opacity: 1;
      }
      95% {
        transform:
          translate3d(0, 0, @r(40vmin, 85vmin))
          rotate(@r(-360deg, 360deg));
      }
      100% {
        opacity: 0;
        transform: translate3d(0, 0, 1vmin);
      }
    }
  );

  @media (prefers-reduced-motion) {
    --play-state: paused;
  }
}
</style>

<css-doodle use="var(--rule)"></css-doodle>

<script>
  import 'css-doodle';
</script>
