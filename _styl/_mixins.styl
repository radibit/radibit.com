strip-unit($value)
  return remove-unit($value)

fluid-type($min-vw, $max-vw, $min-value, $max-value)
  $max-min-value = strip-unit($max-value - $min-value)
  $max-min-vw = strip-unit($max-vw - $min-vw)

  & 
    font-size: $min-value
    
    @media screen and (min-width: $min-vw)
      font-size: 'calc(%s + %s * ((100vw - %s) / %s))' % ($min-value $max-min-value $min-vw $max-min-vw)

    @media screen and (min-width: $max-vw)
      font-size: $max-value
