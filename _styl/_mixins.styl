fluid-type($properties, $min-vw, $max-vw, $min-value, $max-value)
  & 
    for $property in $properties
      $property: $min-value
    
    @media screen and (min-width: $min-vw)
      for $property in $properties
        $property: ($min-value + strip-unit($max-value - $min-value) * ((100vw - $min-vw) / strip-unit($max-vw - $min-vw)))

    @media screen and (min-width: $max-vw)
      for $property in $properties
        $property: $max-value
  
strip-unit($value)
  $value / ($value * 0 + 1)
